{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "allowJs": true, // Cho phép các file JavaScript trong dự án
    "checkJs": false // Không kiểm tra JavaScript nếu bạn không cần

    

  },
  "include": [
    "src/**/*",
    "src/copy-uploads.js" // Thêm file copy-uploads.js vào cấu hình
  ]
}
